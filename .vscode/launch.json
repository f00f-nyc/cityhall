    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Run server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cityhall/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true
        },
        {
            "name": "Run tests",
            "type":"python",
            "request": "launch",
            "program": "${workspaceFolder}/cityhall/manage.py",
            "args": [
                "test",
                "cityhall/test"
            ],
            "django": true
        },
        {
            "name": "Run migrations",
            "type":"python",
            "request": "launch",
            "program": "${workspaceFolder}/cityhall/manage.py",
            "args": [
                "migrate"
            ],
            "django": true
        },
        {
            "name": "Db Shell",
            "type":"python",
            "request": "launch",
            "program": "${workspaceFolder}/cityhall/manage.py",
            "args": [
                "dbshell"
            ],
            "django": true
        },
    ]
}